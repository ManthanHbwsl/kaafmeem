<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mpgiftwrap>
            <general>
                <enabled>1</enabled>
                <add_label>Add Gift Wrap</add_label>
                <change_label>Change Your Gift Wrap</change_label>
                <tax_class>0</tax_class>
                <gift_wrap_icon>default/gift.png</gift_wrap_icon>
                <gift_wrap_type>1</gift_wrap_type>
                <customer_notice>All items will be wrapped in one gift box.</customer_notice>
                <show_on_product>1</show_on_product>
                <gift_message>1</gift_message>
                <max_characters>120</max_characters>
                <gift_message_fee>0</gift_message_fee>
                <gift_message_visible>1,3</gift_message_visible>
                <description>You can make extra notes to tell us about your message when wrapping the gift here.</description>
            </general>
        </mpgiftwrap>
    </default>
</config>
