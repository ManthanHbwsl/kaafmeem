<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Quote\Api\Data\TotalsInterface">
        <attribute code="mp_gift_wrap" type="string"/>
        <attribute code="mp_gift_wrap_postcard" type="string"/>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="mp_gift_wrap_amount" type="float"/>
        <attribute code="mp_gift_wrap_base_amount" type="float"/>
        <attribute code="mp_gift_wrap_postcard_amount" type="float"/>
        <attribute code="mp_gift_wrap_postcard_base_amount" type="float"/>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\InvoiceInterface">
        <attribute code="mp_gift_wrap_amount" type="float"/>
        <attribute code="mp_gift_wrap_base_amount" type="float"/>
        <attribute code="mp_gift_wrap_postcard_amount" type="float"/>
        <attribute code="mp_gift_wrap_postcard_base_amount" type="float"/>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\CreditmemoInterface">
        <attribute code="mp_gift_wrap_amount" type="float"/>
        <attribute code="mp_gift_wrap_base_amount" type="float"/>
        <attribute code="mp_gift_wrap_postcard_amount" type="float"/>
        <attribute code="mp_gift_wrap_postcard_base_amount" type="float"/>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderItemInterface">
        <attribute code="mp_gift_wrap" type="Mageplaza\GiftWrap\Api\Data\WrapDetailsInterface"/>
        <attribute code="mp_gift_wrap_postcard" type="Mageplaza\GiftWrap\Api\Data\WrapDetailsInterface"/>
    </extension_attributes>
</config>
